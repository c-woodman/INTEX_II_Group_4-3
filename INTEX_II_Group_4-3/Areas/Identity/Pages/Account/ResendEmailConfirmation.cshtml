@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}
<div class="container" style="height: 80vh; display: flex; justify-content: center; align-items: center;">
    <div style="text-align: center; width: 100%;">
        <h1>@ViewData["Title"]</h1>
        <p>Enter your email.</p>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 button">Resend</button>
                </form>
            </div>
        </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</div>
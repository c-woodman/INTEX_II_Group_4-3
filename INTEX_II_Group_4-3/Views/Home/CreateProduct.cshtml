@model Product
@{
    ViewData["Title"] = "Create Product";
}

<body>
    <div class="container mt-5">
        <form asp-action="CreateProduct" method="post" class="needs-validation" novalidate>
            <!-- ProductId -->
            <input type="hidden" asp-for="ProductId" />
            <!-- Name -->
            <div class="form-group">
                <label asp-for="Name" class="form-label">Name:</label>
                <input asp-for="Name" class="form-control" placeholder="Enter product name" required />
                <div class="invalid-feedback">Please enter a product name.</div>
            </div>

            <!-- Year -->
            <div class="form-group">
                <label asp-for="Year" class="form-label">Year:</label>
                <input asp-for="Year" class="form-control" type="number" step="any" required />
                <div class="invalid-feedback">Please enter the year.</div>
            </div>

            <!-- NumParts -->
            <div class="form-group">
                <label asp-for="NumParts" class="form-label">Number of Parts:</label>
                <input asp-for="NumParts" class="form-control" type="number" step="any" required />
                <div class="invalid-feedback">Please enter the number of parts.</div>
            </div>

            <!-- Price -->
            <div class="form-group">
                <label asp-for="Price" class="form-label">Price:</label>
                <input asp-for="Price" class="form-control" type="number" step="any" required />
                <div class="invalid-feedback">Please enter the price.</div>
            </div>

            <!-- ImgLink -->
            <div class="form-group">
                <label asp-for="ImgLink" class="form-label">Image Link:</label>
                <input asp-for="ImgLink" class="form-control" placeholder="Enter URL" />
            </div>

            <!-- PrimaryColor -->
            <div class="form-group">
                <label asp-for="PrimaryColor" class="form-label">Primary Color:</label>
                <input asp-for="PrimaryColor" class="form-control" required />
                <div class="invalid-feedback">Please enter the primary color.</div>
            </div>

            <!-- SecondaryColor -->
            <div class="form-group">
                <label asp-for="SecondaryColor" class="form-label">Secondary Color:</label>
                <input asp-for="SecondaryColor" class="form-control" required />
                <div class="invalid-feedback">Please enter the secondary color.</div>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label asp-for="Description" class="form-label">Description:</label>
                <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                <div class="invalid-feedback">Please enter a description.</div>
            </div>

            <!-- Category -->
            <div class="form-group">
                <label asp-for="Category" class="form-label">Category:</label>
                <input asp-for="Category" class="form-control" required />
                <div class="invalid-feedback">Please enter the category.</div>
            </div>

            <!-- Submit Button -->

            <div class="form-group mt-3">
                <form asp-action="Products" asp-controller="Home" method="post">
                    <button type="submit" class="button">Submit</button>
                </form>
            </div>


        </form>
    </div>
</body>

@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}
@model List<TopProductRecommendation>

<div class="image-background">
    <div class="overlay-text">
        Spark Your Imagination, <br>
        <span class="nowrap">Brick by Brick with <span class="colorful letter">A</span><span class="colorful letter">u</span><span class="colorful letter">r</span><span class="colorful letter">o</span><span class="colorful letter">r</span><span class="colorful letter">a</span></span>

        <a href="@Url.Action("Shop", "Home")" class="image-button target-element">
            <div class="half-break"></div>
            <img src="/lib/img/legoButton.png" alt="Button Image" />
        </a>
    </div>
</div>

<div class="parallax">
    <div class="text-box">
        @{
            var product1 = Model.First(); 
        }

        <p>Featured Build</p>
        <h2>@product1.ProductRec.Name</h2>
        <br>
        <a href='@Url.Action("ProductDetail", "Home", new { id = product1.ProductRec.ProductId })' class="ghostButton" style="text-decoration: none; color: #FFBF00;">View Details</a>
    </div>
    <div class="image-box" style="max-height: 400px; align-items: center; overflow: hidden;">
        <img src="@product1.ProductRec.ImgLink" alt="Image for @product1.ProductRec.Name" style="width: 400px; height: 400px; object-fit: contain;">
    </div>
</div>

<br><br>
<div class="container">
    <h3>Recommended</h3>
    <br><br>
    <div class="products-grid">

        @{
            int startIndex = 1; // Index for the second item
            int endIndex = 4; // Index for the fifth item
        }

    @foreach (var product in Model)
    {
        int index = Model.IndexOf(product); // Get the current index of the product
        if (index >= startIndex && index <= endIndex)
        {
            <div class="product-row" onclick="location.href='@Url.Action("ProductDetail", "Home", new { id = product.ProductRec.ProductId })'" style="cursor: pointer;">
                <div class="product-card">
                    <div style="flex: 1; max-height: 200px; display: flex; justify-content: center; align-items: center; overflow: hidden;">
                            <img src="@product.ProductRec.ImgLink" alt="Image for @product.ProductRec.Name" class="image-on-right">
                    </div>
                    <p>@product.ProductRec.Name</p>
                    <p style="font-weight: bold;">$@product.ProductRec.Price.ToString("0.00")</p>
                </div>
            </div>
        }
    }
    </div>
    <br><br>

    
    <div style="text-align: center;">
        <a href="/Home/Shop" class="button" style="text-decoration: none; color: #7A6200;">Explore</a>
    </div>

    <br><br>
</div>




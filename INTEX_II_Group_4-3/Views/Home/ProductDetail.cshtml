@model ProductRecommendation

<div>
    <h2>@Model.ProductRec.Name</h2>
    <div>
        @if (!string.IsNullOrEmpty(Model.ProductRec.ImgLink))
        {
            <img src="@Model.ProductRec.ImgLink" alt="Image for @Model.ProductRec.Name" style="max-width: 750px; height: auto;">
        }
        <p>Price: $@Model.ProductRec.Price</p>
        <p>Year: @Model.ProductRec.Year</p>
        <p>Number of Parts: @Model.ProductRec.NumParts Parts</p>
        <p>Description: <br />@Model.ProductRec.Description</p>
    </div>

    <form id=@Model.ProductRec.ProductId method="post" asp-page="/Cart">
        <input type="hidden" asp-for="ProductRec.ProductId" />
        <button type="submit" class="btn btn-outline-success">Add to Cart</button>
    </form>
</div>


@{    
    ViewData["Title"] = "Shop";
}

@model ProductsListViewModel

    <h1>Shopping List</h1>

        @foreach (Product p in Model.Products)
    {
        <h3>@p.Name</h3>

        <ul>
            <li>Price: @p.Price</li>
            <li>Year: @p.Year</li>
        </ul>
    }

<div page-model="@Model.PaginationInfo" page-action="Shop"></div>


@{
    ViewData["Title"] = "Predictions";

    var classTypeDict = new Dictionary<int, string>
{
        { 0, "Not Fraud" },
        { 1, "Fraud" }
    };
}

<style>
    .table-responsive {
        overflow-x: auto;
    }
    .full-width-table {
        margin-left: -50px; 
        margin-right: 0;

    }
    .table {
        width: auto; 
        margin-bottom: 0; 
    }
    .prediction-cell {
        background-color: #e0f2f1;
    }

</style>

<h2>Predictions</h2>
<div class="full-width-table">
    <table class="table">
        <thead>
            <tr>
                TransactionId,  CustomerId,  Time,  Amount,  Age,  DayOfWeek,  
                EntryMode,  TypeOfTransaction,  CountryOfTransaction,  ShippingAddress,  Bank,  TypeOfCard,  Fraud
                <th>TransactionId</th>
                <th>CustomerId</th>
                <td>Date</td>
                <th>Time</th>
                <th>DayOfWeek</th>
                <th>TypeOfTransaction</th>
                <th>CountryOfTransaction</th>
                <th>ShippingAddress</th>
                <th>Bank</th>
                <th>Fraud</th>
                <th class="prediction-cell">Prediction</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Order.TransactionId</td>
                    <td>@item.Order.CustomerId</td>
                    <td>@item.Order.Date</td>
                    <td>@item.Order.Time</td>
                    <td>@item.Order.DayOfWeek</td>
                    <td>@item.Order.TypeOfTransaction</td>
                    <td>@item.Order.CountryOfTransaction</td>
                    <td>@item.Order.ShippingAddress</td>
                    <td>@item.Order.Bank</td>
                    <td>@item.Order.Fraud</td>
                    <td>@classTypeDict[@item.Order.class_type]</td>
                    <td class="prediction-cell">@item.Prediction</td>
                </tr>
            }
        </tbody>
    </table>

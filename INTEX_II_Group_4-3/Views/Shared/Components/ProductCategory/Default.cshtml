@{
}

@model IQueryable<string>

<div style="flex: 1 !important;">
    <form asp-controller="Home" asp-action="Shop" method="get">
        <select id="productCategory" name="productCategory" onchange="this.form.submit();">
            <option value="">Select a Category</option>
            @foreach (string pt in Model ?? Enumerable.Empty<string>())
            {
                <option value="@pt">@pt</option>
            }
        </select>
    </form>
</div>

